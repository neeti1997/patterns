#include <stdio.h>

void pattern(int n)
{
    int i, j, k=1,l=n, m, o=(n*n)+1, t;
    for(i = 0 ; i< n; i++)
    {
        l = n-i;
        for(j = 0; j<l; j++)
        {
            
            printf("%d *", k);
            k++;
           
        }
        
        for(m = 0; m<l; m++)
        {
            printf("%d ", o);
            o++;
            if(m != l-1)
            {
            printf("*");
            
            }
            else
            {
                o--;
            }
        }
       // printf("\n%d", o);
        o = o - 2*(n-i-1);
      //  printf("\n%d", o);
     //    break;
        t = i;
        printf("\n");
        while(t--)
        printf(" ");
        
    }
}

int main()
{
    int n;
    scanf("%d", &n);
    pattern(n);
    

    return 0;
}
